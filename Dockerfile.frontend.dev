# Optional: Development Dockerfile with live reload
# To use this: docker build -f Dockerfile.frontend.dev -t sora-no-uta-frontend-dev .
# Then update docker-compose.yml frontend service to use this image

FROM node:22-alpine AS dev

WORKDIR /app

COPY FRONTEND/package*.json ./

RUN npm ci

COPY FRONTEND .

EXPOSE 5173

ENV VITE_HOST=0.0.0.0

CMD ["npm", "run", "dev"]
